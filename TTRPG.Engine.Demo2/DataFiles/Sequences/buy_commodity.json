[
	{
		"Name": "BuyCommodity",
		"Example": "BuyCommodity [dirt:commodity,miner:buyer] {quantity:6}",
		"Items": [
			{
				"Name": "TotalBuyAmount",
				"Equation": "buy_price * quantity_to_buy",
				"ResultName": "total_buy_amount",
				"SequenceItemEquationType": "Algorithm"
			},
			{
				"Name": "Intention",
				"Equation": "{buyer_name} is buying {quantity_to_buy} {resource} at {buy_price}/unit for a total of {total_buy_amount} moneys.",
				"ResultName": "intention",
				"SequenceItemEquationType": "Message"
			},
			{
				"Name": "NewQuantityOnHand",
				"Equation": "quantity_on_hand + quantity_to_buy",
				"ResultName": "new_quantity_on_hand",
				"SequenceItemEquationType": "Algorithm"
			},
			{
				"Name": "NewMoney",
				"Equation": "current_money - total_buy_amount",
				"ResultName": "new_money",
				"SequenceItemEquationType": "Algorithm"
			}
		],
		"Conditions": [
			{
				"DependentOnItem": null,
				"Equation": "buy_price * quantity_to_buy <= current_money",
				"ItemNames": null,
				"ThrowOnFail": false,
				"FailureMessage": "{buyer_name} doesn't have enough money to make that purchase."
			}
		],
		"Mappings": [
			{
				"From": "name",
				"To": "buyer_name",
				"ItemName": null,
				"RoleName": "buyer",
				"MappingType": "Role",
				"ThrowOnFailure": true
			},
			{
				"From": "quantity",
				"To": "quantity_to_buy",
				"ItemName": null,
				"RoleName": null,
				"MappingType": "Input",
				"ThrowOnFailure": true
			},
			{
				"From": "resource",
				"To": "resource",
				"ItemName": null,
				"RoleName": "commodity",
				"MappingType": "Role",
				"ThrowOnFailure": true
			},
			{
				"From": "{resource}",
				"To": "quantity_on_hand",
				"ItemName": null,
				"RoleName": "buyer",
				"MappingType": "Role",
				"ThrowOnFailure": true
			},
			{
				"From": "buy",
				"To": "buy_price",
				"ItemName": null,
				"RoleName": "commodity",
				"MappingType": "Role",
				"ThrowOnFailure": true
			},
			{
				"From": "money",
				"To": "current_money",
				"ItemName": null,
				"RoleName": "buyer",
				"MappingType": "Role",
				"ThrowOnFailure": true
			}
		],
		"ResultItems": [
			{
				"Name": "Money",
				"Category": "UpdateAttribute",
				"Source": "new_money",
				"RoleName": "buyer"
			},
			{
				"Name": "Quantity",
				"Category": "UpdateAttribute",
				"FormatMessage": "{resource}",
				"Source": "new_quantity_on_hand",
				"RoleName": "buyer"
			}
		],
		"RoleConditions": [
			{
