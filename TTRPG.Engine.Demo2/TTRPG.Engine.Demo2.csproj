    </Content>
    <Content Include="DataFiles\Sequences\buy_commodity.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="DataFiles\Sequences\hunt.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="DataFiles\Sequences\mine_terrain.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
