    <None Remove="DataFiles\Sequences\hunt.json" />
    <None Remove="DataFiles\Sequences\mine_terrain.json" />
    <None Remove="DataFiles\Sequences\rest.json" />
    <None Remove="DataFiles\Sequences\sell_commodity.json" />
    <None Remove="DataFiles\Sequences\status.json" />
    <None Remove="Icon.ico" />
    <None Remove="Icon.bmp" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="DataFiles\MessageTemplates\output_target_status.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
