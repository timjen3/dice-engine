[
	{
		"Name": "Harvest",
		"Example": "Harvest [miner:farmer,corn1:crop]",
		"Categories": [ "Temporal" ],
		"CategoryParams": {
			"Temporal": {
				"elapsed": "30"
			}
		},
		"Items": [
			{
				"Name": "Damage",
				"Equation": "max(random(wHits,wMin,wMax) - ac + floor(str / 4), 0)",
				"ResultName": "damage",
				"SetComplete": true,
				"Produces": [ "IntentionMessage", "DamageMessage" ]
			},
			{
				"Name": "Take Damage",
				"Equation": "max(hp - damage, 0)",
				"ResultName": "new_hp",
				"Produces": [ "UpdateHP", "DamageTakenMessage" ]
			},
			{
				"Name": "Claim Meat",
				"Equation": "current_meat + ceil((hp - new_hp) / 4)",
				"ResultName": "new_meat",
				"Produces": [ "UpdateMeat", "MeatTakenMessage" ]
			},
			{
				"Name": "Drain Stamina",
				"Equation": "farmer_stamina - 1",
				"ResultName": "new_stamina",
				"Produces": [ "UpdateStamina" ]
			}
		],
		"Conditions": [
			{
				"DependentOnItem": null,
				"Equation": "crop_age >= crop_maturity",
				"ThrowOnFail": false,
				"FailureMessage": "Crop is not ready to be harvested yet. ({crop_age} / {crop_maturity})"
			},
			{
				"DependentOnItem": null,
				"Equation": "farmer_stamina > 0",
				"ThrowOnFail": false,
				"FailureMessage": "You're too tired! You should rest."
			},
			{
				"DependentOnItem": null,
				"Equation": "hp > 0",
				"ThrowOnFail": false,
				"FailureMessage": "Already harvested."
			},
			{
				"DependentOnItem": null,
				"Equation": "pierce >= ac",
				"ThrowOnFail": false,
				"FailureMessage": "Your weapon is inneffective."
			},
			{
				"DependentOnItem": "Damage",
				"Equation": null,
				"ItemNames": [
					"Report Damage",
					"Drain Stamina"
				],
				"ThrowOnFail": false,
				"FailureMessage": null
			},
			{
				"DependentOnItem": "Damage",
				"Equation": "damage > 0",
				"ItemNames": [
					"Take Damage",
					"Report Damage Taken"
				],
				"ThrowOnFail": false,
				"FailureMessage": null
			},
			{
				"DependentOnItem": "Take Damage",
				"Equation": "new_hp < hp",
				"ItemNames": [
					"Claim Meat"
				],
				"ThrowOnFail": false,
				"FailureMessage": null
			},
			{
				"DependentOnItem": "Claim Meat",
				"Equation": "new_meat > 0",
				"ItemNames": [
					"Report Meat Taken"
				],
				"ThrowOnFail": false,
				"FailureMessage": null
			}
		],
		"Mappings": [
			{
				"From": "name",
				"To": "farmer_name",
				"ItemName": null,
				"EntityName": "farmer",
				"MappingType": "Entity",
				"ThrowOnFailure": true
			},
			{
				"From": "meat",
				"To": "current_meat",
				"ItemName": null,
				"EntityName": "farmer",
				"MappingType": "Entity",
				"ThrowOnFailure": true
			},
			{
				"From": "name",
				"To": "crop_name",
				"ItemName": null,
				"EntityName": "crop",
				"MappingType": "Entity",
				"ThrowOnFailure": true
			},
			{
				"From": "hp",
